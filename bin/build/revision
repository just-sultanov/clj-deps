#!/usr/bin/env bash

# Return the complete revision number
# <major>.<minor>.<trunk-basis>.<patch-or-0>-<sha>[-qualifier]

set -e

version_template=`cat VERSION`


if [[ "$version_template" =~ ^[0-9]+\.[0-9]+\.VERSION(-[a-zA-Z0-9]+)?$ ]]; then

    git_revision=`bin/build/git_revision`
    echo ${version_template/VERSION/$git_revision}

else
    echo "Invalid version template string: $version_template" >&2
    exit -1
fi
